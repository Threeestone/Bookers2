<head>
 <script src="https://kit.fontawesome.com/2f82d990d8.js" crossorigin="anonymous"></script>
</head>

<div class="container">
  <div class="row">
    <div class="col-md-3">
     <h2>User info</h2>
      <p><%= image_tag user.get_profile_image(100,100) %></p>

      <table class="table">
       <tbody>
        <tr>
         <th>name</th>
         <th><%= user.name %></th>
        </tr>
        <tr>
         <th>introduction</th>
         <th><%= user.introduction %></th>
        </tr>
       </tbody>
      </table>
 

      <div class="row">
      <%= link_to edit_user_path(user.id), class: "btn btn-outline-secondary btn-block edit_user_75806" do %>
      <i class="fa-solid fa-user-gear"></i>
      <% end %>
      </div>

      <%= form_with model: book, method: :post do |f| %>
      <h2 class="mt-3">New book</h2>
       <div class="form-group">
        <label for="book title">Title</label>
       </div>
       <%= f.text_field :title %>

       <div class="form-group">
        <label for="book-body">Opinion</label>
       </div>
       <%= f.text_field :body %>
       
       <div class="form-group">
        <%= f.submit 'Create Book', class:"btn btn-success" %>
       </div>
        <% end %>

    </div>
  </div>
</div>


<% if book.errors.any? %>
  <%= book.errors.count %>:error
  <ul>
    <% book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
 <% end %>
