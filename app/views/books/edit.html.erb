<h1>Editing Book</h1>

<%= form_with model: @book do |t| %>

<div class='title'>
 <h4>Title</h4>
  <%= t.text_field :title %>
</div>
<div class="body">
 <h4>Body</h4>
  <%= t.text_area :body %>
</div>
<div class="submit">
  <%= t.submit 'Update Book' %>
</div>
<% end %>

<div class="choose2">
 <%= link_to "Show", book_path(@book.id) %>
 |
 <%= link_to "Back", books_path %>
</div>
