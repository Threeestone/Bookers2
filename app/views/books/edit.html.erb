<main>
  <p id="notice"></p>
 <div class="container">
  <div class="row">
   <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h1>Editing Book</h1>

    <% if @book.errors.any? %>
     <%= @book.errors.count %>:error
     <ul>
      <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
     </ul>
     <% end %>

     <%= form_with model: @book do |f| %>

       <div class='form-group'>
        <label for="book title">Title</label>
       </div>
       <%= f.text_field :title %>

       <div class="form-group">
        <label for="book-body">Opinion</label>
       </div>
       <%= f.text_field :body %>

      <div class="form-group">
       <%= f.submit 'Update Book', class: "btn btn-success" %>
      </div>
       <% end %>

     <div class="choose2">
      <%= link_to "Show", book_path(@book.id) %>
      |
      <%= link_to "Back", books_path %>
     </div>
   </div>
  </div>
 </div>

<%if @book.errors.any? %>
  <%= @book.errors.count %> Title cannot be blank.
   <ul>
    <%@book.errors.full_messages.each do |message| %>
     <li><%= message %></li>
    <% end %>
   </ul>
  <% end %>