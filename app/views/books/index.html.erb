<div class="info">
 <h2>User info</h2>
  <% books.each do |book| %>
   <p><%image_tag book.user.get_profile_image(100,100) %></p>
</div>

<table class="table">
  <tbody>
    <tr>
      <th>name</th>
      <th>book.id</th>
    </tr>
    <tr>
      <th>introduction</th>
      <th></th>
    </tr>
  </tbody>
</table>

<div class="row">
  <%= link_to "edit", edit_user_path %>
</div>

<%= form_with model: @book, method: :post do |f| %>
 <h2>New book</h2>
  <h4>Title</h4>
   <%= f.text_field :title %>
  <h4>opinion</h4>
   <%= f.text_field :body %>
   <%= f.submit 'Create Book' %>
<% end %>

<h2>Books</h2>
 <table>
  <thead>
   <tr>
     <th></th>
     <th>Title</th>
     <th>Opinion</th>
     <th colspan="3"></th>
   </tr>
  </thead>

  <tbody>
   <% @books.each do |book| %>
    <tr>
      <td><%image_tag book.user.get_profile_image(100,100) %></td>
      <td><%= link_to book.title,book_path(book.id) %></td>
      <td><%= book.opinion %></td>
    </tr>
   <% end %>
  </tbody>
 </table>