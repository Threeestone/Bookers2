<div>
 <%= flash[:notice] %>
</div>

<%= render 'books/list', book: @book_new, user: @user %>


<h2>Book detail</h2>
 <table class="table">
  <tbody>
    <tr>
     <td><%= link_to user_path(@book.user_id) do %>
     <%= image_tag @book.user.get_profile_image(100,100) %>
     <br><%= @book.user.name %></td>
     <% end %>

     <td><%= @book.title %></td>
     <td><%= @book.body %></td>
    <% if @book.user == current_user %>
     <td><%= link_to "Edit", edit_book_path(@book.id), class:"btn btn-sm btn-success edit_book_57269" %></td>
     <td><%= link_to "Destroy", "/books/#{@book.id}", method: :delete, class:"btn btn-sm btn-danger destroy_book_57269" %></td>
    <% end %>
    </tr>
  </tbody>
 </table>