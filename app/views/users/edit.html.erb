<h2>User info</h2>

 <% if @user.errors.any? %>
  <%= @user.errors.count %>:error
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
 <% end %>

 <%= form_with model: @user do |f| %>
  <p>Name</p>
   <%= f.text_field :name %>
  <p>Image</p>
   <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
  <p>Introduction</p>
   <%= f.text_area :introduction %>
 <div class="submit">
  <%= f.submit 'Update User', class:"btn btn-secondary" %>
 </div>
  <% end %>