<h2>User info</h2>

 <%= form_with model: @user do |t| %>
  <p>Name</p>
   <%= t.text_field :name %>
  <p>Image</p>
   <%= t.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
  <p>Introduction</p>
   <%= t.text_area :body %>
 <div class="submit">
  <%= t.submit 'Update User', class:"btn btn-secondary" %>
 </div>
  <% end %>